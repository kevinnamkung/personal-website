---
const links = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" }
];
---

<style>
  nav {
    background-color: #E6E6E6;
    color: #;
    padding: 15px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 100px; 
    padding: 0;
    margin: 0;
    margin-right: 150px;
  }

  .nav-links a {
    color: #000000;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease-in-out;
  }

  .nav-links a:hover {
    color: #3224f1;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    margin-left: 100px;
  }
</style>

<nav>
  <a class="logo">KN</a>
  <ul class="nav-links">
    {links.map((link) => (
      <li>
        <a href={link.href}>{link.name}</a>
      </li>
    ))}
  </ul>
</nav>
